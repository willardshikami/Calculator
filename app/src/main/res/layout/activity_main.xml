<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.willardpc.calculator.MainActivity"
    android:background="#3366ff"
    android:padding="0dp"
    android:nestedScrollingEnabled="false"
    android:onClick="onClickNumber">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:background="#fff"
        android:gravity="bottom|right"
        android:textSize="70dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:id="@+id/btn7"
        android:background="#777777"
        android:textColor="#fff"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:id="@+id/btn4"
        android:background="#777777"
        android:textColor="#fff"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/btn7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:id="@+id/btn1"
        android:background="#777777"
        android:textColor="#fff"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/btn4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="c"
        android:id="@+id/btnClear"
        android:background="#777777"
        android:textColor="#fff"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/btn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickClear" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:id="@+id/btn8"
        android:background="#777777"
        android:textColor="#fff"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:id="@+id/btn9"
        android:background="#777777"
        android:textColor="#fff"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:layout_above="@+id/btn4"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="+"
        android:id="@+id/btnPlus"
        android:background="#777777"
        android:textColor="#fff"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:layout_above="@+id/btn4"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:id="@+id/btn5"
        android:background="#777777"
        android:textColor="#fff"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:layout_alignTop="@+id/btn4"
        android:layout_toLeftOf="@+id/btn9"
        android:layout_toStartOf="@+id/btn9"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="- "
        android:id="@+id/btnMinus"
        android:background="#777777"
        android:textColor="#fff"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:layout_alignBottom="@+id/btn5"
        android:layout_alignRight="@+id/btnPlus"
        android:layout_alignEnd="@+id/btnPlus"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:id="@+id/btn6"
        android:background="#777777"
        android:textColor="#fff"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:layout_alignTop="@+id/btnMinus"
        android:layout_toLeftOf="@+id/btnMinus"
        android:layout_toStartOf="@+id/btnMinus"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:id="@+id/btn3"
        android:background="#777777"
        android:textColor="#fff"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/btn4"
        android:layout_toLeftOf="@+id/btnMinus"
        android:layout_toStartOf="@+id/btnMinus"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:id="@+id/btn2"
        android:background="#777777"
        android:textColor="#fff"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/btn4"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="x"
        android:id="@+id/btnMultipy"
        android:background="#777777"
        android:textColor="#fff"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:layout_above="@+id/btnClear"
        android:layout_toRightOf="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="0"
        android:id="@+id/btn0"
        android:background="#777777"
        android:textColor="#fff"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/btn3"
        android:layout_toLeftOf="@+id/btn3"
        android:layout_toStartOf="@+id/btn3"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="/"
        android:id="@+id/btnDiv"
        android:background="#777777"
        android:textColor="#fff"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:layout_alignTop="@+id/btn0"
        android:layout_alignRight="@+id/btnMultipy"
        android:layout_alignEnd="@+id/btnMultipy"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="="
        android:id="@+id/btnEqual"
        android:background="#777777"
        android:textColor="#fff"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/btn3"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:onClick="onClickEqual" />

</RelativeLayout>
